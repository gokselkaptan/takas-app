# ========================================
# TAKAS-A Environment Variables Template
# ========================================
# Bu dosyayi .env olarak kopyalayin ve degerleri doldurun
# ASLA gercek degerleri bu dosyaya yazmayin!

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/takasa?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-min-32-characters"
NEXTAUTH_URL="http://localhost:3000"

# Abacus AI
ABACUSAI_API_KEY="your-abacus-api-key"

# Google reCAPTCHA v3
RECAPTCHA_SECRET_KEY="your-recaptcha-secret"
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="your-recaptcha-site-key"

# Push Notifications (VAPID)
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Email (SMTP)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASSWORD="your-smtp-password"
SMTP_FROM="noreply@takas-a.com"

# File Upload
UPLOAD_MAX_SIZE="5242880"
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_MAX_REQUESTS="100"
